<UserControl
    x:Class="wpchttr.View.chttrPivot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wpchttr.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="400">

    <Grid>
        <Image x:Name="image_current_user_gravatar"
               Source="{Binding CurrentUser.GravatarUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               HorizontalAlignment="Left" Height="70" Margin="10,10,0,0" VerticalAlignment="Top" Width="70" />
        <StackPanel HorizontalAlignment="Left" Height="70" Margin="85,10,0,0" VerticalAlignment="Top" Width="100">
            <TextBlock x:Name="textblock_currentuser_name"
                       Text="{Binding CurrentUser.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       HorizontalAlignment="Left" Margin="85,10,0,0" TextWrapping="NoWrap" VerticalAlignment="Top"
                       Width="140" />
            <TextBlock x:Name="textblock_currentuser_followers_label" Text="Followers:" HorizontalAlignment="Left"
                       Margin="85,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
            <TextBlock x:Name="textblock_currentuser_followers_count"
                       Text="{Binding CurrentUserRelationships.Followers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       HorizontalAlignment="Left" Margin="160,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
            <TextBlock x:Name="textblock_currentuser_following_label" Text="Following:" HorizontalAlignment="Left"
                       Margin="85,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
            <TextBlock x:Name="textblock_currentuser_following_count"
                       Text="{Binding CurrentUserRelationships.Following, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       HorizontalAlignment="Left" Margin="160,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
        </StackPanel>

        <Pivot Margin="0,85,0,0">
            <PivotItem Header="PivotItem 0">
                <local:Profile />
            </PivotItem>
            <PivotItem Header="PivotItem 1">
                <Grid />
            </PivotItem>
        </Pivot>

    </Grid>
</UserControl>