<UserControl
    x:Class="wpchttr.View.Feed"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wpchttr.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="FontSize" Value="30" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <ListView x:Name="ListViewFeed"
                  ItemsSource="{Binding CurrentUser.Feed.ChatCollection, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0, 15, 0, 15">
                        <TextBlock Text="{Binding Content, Mode=TwoWay}" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding CreatedAt, Mode=TwoWay}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
